<% if user_signed_in? %>
  <%= form_for @list, remote: true do |form| %>
    <div class="form-inline my-2 my-lg-0">
      <%= form.text_field :description, class: "form-control mr-sm-2" %>
      <%= form.submit "Add Task", class: 'btn btn-outline-secondary my-2 my-sm-0' %>
    </div>
  <% end %>
<% end %>
