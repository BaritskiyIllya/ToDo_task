<!DOCTYPE html>
<html>
<head>
  <title>ToDoList</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= javascript_pack_tag 'application' %>
  <%= stylesheet_pack_tag 'application' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if user_signed_in? %>
  <%= link_to "Sign out", destroy_user_session_path, class: "btn btn-outline-secondary btn-sm", :method => :delete %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-secondary btn-sm" %>
  <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-secondary btn-sm" %>
<% end %>
<div class="container">
  <%= render "lists/navbar" %>
  <%= render "lists/flash" %>
  <%= yield %>
</div>
</body>
</html>
